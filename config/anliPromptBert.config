[train] #train parameters
epoch = 128
batch_size = 16

reader_num = 0

optimizer = adamw
learning_rate = 0.001
weight_decay = 0
step_size = 1
lr_multiplier = 1

max_len = 128

[distributed]
use = True
backend = nccl

[eval] #eval parameters
batch_size = 64

reader_num = 0

[prompt]
prompt_tune = True
prompt_len = 100
prompt_num = 100

[data] #data parameters
train_dataset_type = anli
train_formatter_type = anliPromptRoberta
train_data_path = ./data/anli/train.json

matched = True
valid_dataset_type = anli
valid_formatter_type = anliPromptRoberta
valid_data_path = ./data/anli/dev.json


test_dataset_type = anli
test_formatter_type = anliPromptRoberta
test_data_path = ./data/anli/test.json

[model] #model parameters
model_base = Bert
model_name = PromptBert
model_size = base

[output] #output parameters
output_time = 1
test_time = 1

model_path = ./model
model_name = anliPromptBert

tensorboard_path = ./tensorboard

output_function = acc

tqdm_ncols = 150
